FROM mcr.microsoft.com/dotnet/aspnet:5.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:5.0 AS build
WORKDIR /src
COPY . .
RUN dotnet restore "HBK.Storage.PluginIntegration/HBK.Storage.PluginIntegration.csproj"
WORKDIR "/src/HBK.Storage.PluginIntegration"
RUN dotnet build "HBK.Storage.PluginIntegration.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "HBK.Storage.PluginIntegration.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "HBK.Storage.PluginIntegration.dll"]