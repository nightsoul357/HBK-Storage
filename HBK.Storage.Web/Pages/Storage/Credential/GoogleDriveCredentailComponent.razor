<MudItem xs="12" sm="8" md="6">
    <MudTextField @bind-Value="this.ClientId" Label="Client Id" Variant="Variant.Outlined" Required="true" />
</MudItem>
<MudItem xs="12" sm="8" md="6">
    <MudTextField @bind-Value="this.ClientSecret" InputType="InputType.Password" Label="Client Secret" Variant="Variant.Outlined" Required="true" />
</MudItem>
<MudItem xs="12" sm="8" md="6">
    <MudTextField @bind-Value="this.Parent" Label="Parent" Variant="Variant.Outlined" Required="true" />
</MudItem>
<MudItem xs="12" sm="8" md="6">
    <MudTextField @bind-Value="this.User" Label="User" Variant="Variant.Outlined" Required="true" />
</MudItem>
<MudItem xs="12" sm="12" md="12">
    <MudTextField T="string" Text="@JsonConvert.SerializeObject(this.Tokens)" Lines="5" Label="Token" HelperText="@this.TokenMessage" Variant="Variant.Outlined" Required="true" ReadOnly="true" />
</MudItem>
<MudItem xs="12" sm="12" md="12">
    <MudButton OnClick="this.GetToken" Variant="Variant.Filled" Color="Color.Primary">更新 Token</MudButton>
</MudItem>
