@inherits HBKLayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudIcon Icon="@Icons.Custom.Brands.MudBlazor" Size="Size.Large" />
            @*<img src="/img/icon_80.png" style="width:40px">*@
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.MdAndUp">
            <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(() => base.InvokeSafety(this.DrawerToggle))" />
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.Xs">
            <MudText Typo="Typo.h6" Class="ml-4">HBK Storage Dashboard</MudText>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
            <MudText Typo="Typo.subtitle2">HBK Storage Dashboard</MudText>
        </MudHidden>
        <MudSpacer />
        <MudText Typo="Typo.subtitle2">@this.SignInKey?.Type.ToString() / @this.SignInKey?.Name.ToString()</MudText>
        <MudIconButton Icon="@Icons.Material.Outlined.Logout" Color="Color.Inherit" OnClick="() => base.InvokeSafety(this.SignOut)" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/nightsoul357/HBKStorage" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" ClipMode="DrawerClipMode.Always">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudToolBar DisableGutters="true">
                <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" OnClick="@((e) => base.InvokeSafety(this.DrawerToggle))" Class="ml-3" />
                <MudSpacer />
                @*<MudButton Variant="Variant.Text" Link="https://github.com/nightsoul357/HBKStorage" Style="color:#424242;" Class="mr-3">Source Code</MudButton>*@
            </MudToolBar>
        </MudHidden>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
            <ErrorBoundary>
                @base.Body
            </ErrorBoundary>
        </MudContainer>
    </MudMainContent>
</MudLayout>