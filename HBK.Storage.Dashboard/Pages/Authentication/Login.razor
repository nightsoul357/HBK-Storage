@inherits HBKPageBase
@layout LoginLayout
@page "/"
@page "/authentication/login"


<MudText Typo="Typo.h4" GutterBottom="true">Sign In</MudText>

<MudTextField @bind-Value="@this.Password" Label="API Key" Variant="Variant.Outlined" InputType="@this.PasswordInput" Adornment="Adornment.End" AdornmentIcon="@this.PasswordInputIcon" OnAdornmentClick="() => this.InvokeSafety(this.TogglePasswordVisibility)" />

<div Class="d-flex justify-space-between align-center">
    <MudCheckBox T="bool" @bind-Checked="this.IsRemeber" Label="Remember me?" Color="Color.Primary" Class="ml-n1 my-3"></MudCheckBox>
</div>

<MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" OnClick="()=> this.InvokeSafetyAsync(this.SignInAsync)" FullWidth="true">Sign In</MudButton>