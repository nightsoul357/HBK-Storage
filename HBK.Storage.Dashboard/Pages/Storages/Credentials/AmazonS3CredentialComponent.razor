@inherits CredentialComponentBase<AmazonS3StorageCredentials>

<MudItem xs="12" sm="8" md="6">
    <MudTextField @bind-Value="base._credentials.AccessKey" Label="Access Key" Variant="Variant.Outlined" Required="true" />
</MudItem>
<MudItem xs="12" sm="8" md="6">
    <MudTextField @bind-Value="base._credentials.SecretKey"  InputType="InputType.Password" Label="Secret" Variant="Variant.Outlined" Required="true" />
</MudItem>
<MudItem xs="12" sm="8" md="6">
    <MudTextField @bind-Value="base._credentials.BucketName" Label="Bucket Name" Variant="Variant.Outlined" Required="true" />
</MudItem>
<MudItem xs="12" sm="8" md="6">
    <MudTextField @bind-Value="base._credentials.Region" Label="Region" Variant="Variant.Outlined" Required="true" />
</MudItem>
<MudItem xs="12" sm="8" md="6">
    <MudTextField @bind-Value="base._credentials.ServiceURL" Label="Service URL" Variant="Variant.Outlined" Required="true" />
</MudItem>
<MudItem xs="12" sm="8" md="6">
    <MudCheckBox @bind-Checked="base._credentials.ForcePathStyle" Color="Color.Primary" Required="true">Force Path Style</MudCheckBox>
</MudItem>