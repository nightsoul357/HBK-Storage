@using Newtonsoft.Json
@inherits CredentialComponentBase<GoogleDriveCredentials>

<MudItem xs="12" sm="8" md="6">
    <MudTextField @bind-Value="base._credentials.ClientId" Label="Client Id" Variant="Variant.Outlined" Required="true" />
</MudItem>
<MudItem xs="12" sm="8" md="6">
    <MudTextField @bind-Value="base._credentials.ClientSecret" InputType="InputType.Password" Label="Client Secret" Variant="Variant.Outlined" Required="true" />
</MudItem>
<MudItem xs="12" sm="8" md="6">
    <MudTextField @bind-Value="base._credentials.Parent" Label="Parent" Variant="Variant.Outlined" Required="true" />
</MudItem>
<MudItem xs="12" sm="8" md="6">
    <MudTextField @bind-Value="base._credentials.User" Label="User" Variant="Variant.Outlined" Required="true" />
</MudItem>
<MudItem xs="12" sm="12" md="12">
    <MudTextField T="string" Text="@JsonConvert.SerializeObject(base._credentials.Tokens)" Lines="5" Label="Token" HelperText="@this.TokenUpdateMessage" Variant="Variant.Outlined" Required="true" ReadOnly="true" />
</MudItem>
<MudItem xs="12" sm="12" md="12">
    <MudButton OnClick="@(() => base.InvokeSafetyAsync(this.UpdateTokenAsync))" Variant="Variant.Filled" Color="Color.Primary">更新 Token</MudButton>
</MudItem>
