FROM mcr.microsoft.com/dotnet/aspnet:5.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:5.0 AS build
WORKDIR /src
COPY . .
RUN dotnet restore "HBK.Storage.Web/HBK.Storage.Web.csproj"
WORKDIR "/src/HBK.Storage.Web"
RUN dotnet build "HBK.Storage.Web.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "HBK.Storage.Web.csproj" -c Release -o /app/publish

FROM nginx:alpine AS final
WORKDIR /usr/share/nginx/html
COPY --from=publish /app/publish/wwwroot .
COPY nginx.conf /etc/nginx/nginx.conf